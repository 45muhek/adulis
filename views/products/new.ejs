<% include ../partials/header%>
<h1 class="texts" style="margin-bottom:20px">Create a new product</h1>

<div class="container">
  <div class="row">
    <div style="width: 30%; margin:0 auto;" ;>
      <form action="/productcatalogue" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="pname"
            placeholder="product name"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="manu"
            placeholder="product manufacturer"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="price"
            placeholder="product price"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="desc"
            placeholder="Product Description"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="pic"
            placeholder="Image"
          />
        </div>

        <div class="form-group">
          <input type="submit" class="btn btn-lg btn-primary btn-block" />
        </div>
      </form>
    </div>

    <a href="/productcatalogue" class="btn btn-default ">Back</a>
  </div>
</div>
