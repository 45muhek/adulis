<% include ../partials/header%>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h2>All orders</h2>

      <div class="panel panel-default">
        <div class="panel-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Date</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <%orders.forEach(function(order){ %>
              <%order.items.forEach(function(item){ %>
              <tr>
                <td><%=order.name%></td>

                <td>
                  <img src="<%=item.item.image%>" width="50" height="50" />
                </td>
                <td><%=item.item.pname%></td>
                <td><%=item.item.price%>br</td>

                <td><%=order.deliverydate%></td>
                <td><%=order.status%></td>
                <td>
                  <div class="row" style="margin:0">
                    <div class="col-lg-6">
                      <a
                        class="bt btn-default btn-lg"
                        href="/order/set_transporter"
                        ><i class="fa fa-reply "> </i>
                      </a>
                    </div>
                    <div class="col-lg-6">
                      <a
                        class="bt btn-default btn-lg"
                        href="/order/user/<%=order.user%>"
                        ><i class="fa fa-eye"></i
                      ></a>
                    </div>
                  </div>
                </td>
              </tr>
              <% }) %> <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
